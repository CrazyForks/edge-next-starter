{
  "name": "edge-next-starter",
  "version": "1.1.0",
  "description": "Next.js on Cloudflare Workers via vinext (Vite), with D1, R2, and KV",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "postinstall": "prisma generate",
    "prepare": "husky",
    "dev": "vinext dev",
    "build": "vinext build",
    "start": "vinext start",
    "lint": "eslint .",
    "deploy": "vinext deploy",
    "deploy:preview": "vinext deploy --preview",
    "wrangler": "wrangler",
    "db:create:test": "wrangler d1 create cloudflare-worker-template-test",
    "db:create:prod": "wrangler d1 create cloudflare-worker-template-prod",
    "db:migrations:create": "wrangler d1 migrations create cloudflare-worker-template-local",
    "db:migrations:list": "wrangler d1 migrations list cloudflare-worker-template-local --local",
    "db:migrate:local": "wrangler d1 migrations apply cloudflare-worker-template-local --local",
    "db:migrate:test": "wrangler d1 migrations apply cloudflare-worker-template-test --remote --config wrangler.test.toml",
    "db:migrate:prod": "wrangler d1 migrations apply cloudflare-worker-template-prod --remote --config wrangler.prod.toml",
    "db:validate": "node scripts/validate-migrations.js",
    "db:seed": "node scripts/seed.js",
    "prisma:generate": "prisma generate",
    "r2:create:test": "wrangler r2 bucket create cloudflare-worker-template-test",
    "r2:create:prod": "wrangler r2 bucket create cloudflare-worker-template-prod",
    "kv:create:test": "wrangler kv namespace create KV --env test",
    "kv:create:prod": "wrangler kv namespace create KV --env production",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui"
  },
  "keywords": [
    "next.js",
    "cloudflare",
    "edge",
    "d1",
    "r2",
    "workers"
  ],
  "author": "",
  "license": "MIT",
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,css,md}": "prettier --write"
  },
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "dependencies": {
    "@prisma/adapter-d1": "^6.17.1",
    "@prisma/client": "^6.17.1",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-toast": "^1.2.15",
    "axios": "^1.13.1",
    "better-auth": "^1.4.19",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.548.0",
    "next": "15.5.2",
    "next-intl": "^4.8.2",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "resend": "^6.9.2",
    "stripe": "^20.0.0",
    "tailwind-merge": "^3.3.1",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@cloudflare/vite-plugin": "^1.25.5",
    "@cloudflare/workers-types": "^4.20251011.0",
    "@playwright/test": "^1.58.2",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^22.15.0",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitejs/plugin-rsc": "^0.5.21",
    "@vitest/ui": "^2.1.9",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.37.0",
    "eslint-config-next": "15.5.2",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "happy-dom": "^20.0.2",
    "husky": "^9.1.6",
    "jsdom": "^27.0.0",
    "lint-staged": "^15.2.10",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "prisma": "^6.17.1",
    "react-server-dom-webpack": "^19.2.4",
    "tailwindcss": "^3.4.17",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.9.3",
    "vinext": "^0.0.9",
    "vite": "^7.3.1",
    "vitest": "^3.2.4",
    "wrangler": "^4.68.1"
  }
}
